---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Code, Brain, Rocket } from '@lucide/astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="about-me" id="about-me">
    <div class="container">
        <h2>{t('about.title')}</h2>

        <div class="about-content">
            <div class="bio">
                <p class="highlight">{t('about.highlight')} </p>
                <p>
                    {t('about.description')}
                </p>
            </div>
        </div>
        
        <div class="skills-grid">
            <div class="skill-card">
                <Code size={24} />
                <h3>{t('about.title.card.1')}</h3>
                <p>{t('about.description.card.1')}</p>
            </div>

            <div class="skill-card">
                <Brain size={24} />
                <h3>{t('about.title.card.2')}</h3>
                <p>{t('about.description.card.2')}</p>
            </div>

            <div class="skill-card">
                <Rocket size={24} />
                <h3>{t('about.title.card.3')}</h3>
                <p>{t('about.description.card.3')}</p>
            </div>
        </div>
    </div>
</section>

<style>
    .about-content {
        max-width: 800px;
        margin: 0 auto 3rem;
    }

    .bio {
        padding: 2rem;
        background-color: var(--background);
        background-image: var(--background-image);
        border-radius: 12px;
        box-shadow: 0 4px 6px var(--shadow);
    }

    .highlight {
        color: var(--primary);
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    .bio p {
        color: var(--text-secondary);
        line-height: 1.8;
        font-size: 1.1rem;
    }

    .about-me {
        padding: 4rem 2rem;
        background-color: var(--surface);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }

    .skill-card {
        background-color: var(--background);
        background-image: var(--background-image);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px var(--shadow);
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        transition: transform 0.3s ease;
    }

    .skill-card:hover {
        transform: translateY(-5px);
    }

    .skill-card [data-icon] {
        color: var(--primary);
        margin-bottom: 1rem;
    }

    h3 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        color: var(--text);
    }

    p {
        color: var(--text-secondary);
        line-height: 1.6;
    }

    @media (max-width: 768px) {
        .about-me {
            padding: 3rem 1rem;
        }

        .skills-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>