<style>
  .projects {
    padding: 4rem 2rem;
    background-color: var(--surface);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 3rem;
    text-align: center;
    color: var(--text);
    font-weight: 700;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 0 auto;
  }

  .project-card {
    background-color: var(--background);
    background-image: var(--background-image);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px var(--shadow);
    transition: transform 0.3s ease;
    position: relative;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .project-header h3 {
    font-size: 1.25rem;
    color: var(--text);
    font-weight: 600;
  }

  .project-links {
    display: flex;
    gap: 1rem;
  }

  .project-links img {
    color: var(--text);
    filter: invert(1);
  }

  .project-links a {
    color: var(--text);
    transition: color 0.3s ease;
  }

  .project-links a:hover {
    color: var(--primary);
  }

  .project-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .tech-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    background-color: var(--surface);
    color: var(--text);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.875rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .toggle-details {
    position: absolute;
    bottom: 0.5rem;
    left: 50%;
    transform: translateX(-50%);
    background: none;
    border: none;
    color: var(--text);
    cursor: pointer;
    padding: 0.5rem;
    transition: transform 0.3s ease;
  }

  .tech-tag img {
    width: 16px;
    height: 16px;
  }

  .toggle-details.active {
    transform: translateX(-50%) rotate(180deg);
  }

  @media (max-width: 768px) {
    .projects {
      padding: 3rem 1rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card {
      padding: 1.25rem;
    }
  }
</style>
